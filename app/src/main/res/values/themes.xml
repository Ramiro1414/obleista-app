<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Colores de la barra de estado -->
        <item name="android:statusBarColor">@color/cyan</item>
        <!-- Iconos de la barra de estado en negro cuando la barra es clara -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Color principal de los botones y otros elementos -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/cyan</item>
        <item name="colorAccent">@color/cyan</item>
    </style>
</resources>